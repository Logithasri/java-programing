import java.util.Scanner; 

public class PersonalInfoInput {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Enter your age (short): ");
        short age = scanner.nextShort();

        System.out.print("Enter your phone number (int): ");
        int phoneNumber = scanner.nextInt();

        System.out.print("Enter height in cm (float): ");
        float height = scanner.nextFloat();

        System.out.print("Enter weight in kg (double): ");
        double weight = scanner.nextDouble();

    
        System.out.println(" Personal Information ");
        System.out.println("Age: " + age);
        System.out.println("Phone Number: " + phoneNumber);
        System.out.println("Height (cm): " + height);
        System.out.println("Weight (kg): " + weight);

        scanner.close();
    }
}
